<%- include('header') %>
    <h1>Home</h1>
    <p>
        <%= homeStartingContent%>
    </p>


    <% posts.forEach(function(element){ %>
        <h1><%=element.title%></h1>
        <% if (element.body.length <=100) {%>
            <p><%=element.body%></p>
        <% } %>
        
        <% if (element.body.length >100) { %>
            <p><%=element.body.substring(0,101)+" ... "%> <a href="/post/<%=element.title%>">Read More</a></p>
        <% } %>
    <% }); %>
    <%- include('footer') %>